<IfModule mod_rewrite.c>
	RewriteEngine On

	RewriteRule	^$						/buy	[R=301,L]
	RewriteRule ^p/([^/]+)$				pix/index.php?p=$1 [L]
	RewriteRule ^p/(\d+)/(\d+)/(.+)$	pix/index.php?w=$1&h=$2&p=$3 [L]

	RewriteRule ^(buy|rent|read)/?$						index.php?area=$1&action=index&{QUERY_STRING} [L]
	RewriteRule ^(buy|rent|read)/([\d+])/?$				index.php?area=$1&action=index&id=$2&{QUERY_STRING} [L]
	RewriteRule ^(buy|rent|read)/(list|item)/(\d+)/?$	index.php?area=$1&action=$2&id=$3&{QUERY_STRING} [L]
	RewriteRule ^(buy|rent|read)/(list|item)/?(.*)?/?$	index.php?area=$1&action=$2&query=$3& [QSA,L]
	
#	RewriteRule ^(buy|rent)/(.+)/(.+)$		index.php?area=search&action=$1&property=$2&filter=$3 [L]
#	RewriteRule ^([a-z0-9]+)/([a-zA-Z0-9]+)$	index.php?area=$1&action=$2&%{QUERY_STRING} [L]


	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteRule	^(.+)$								index.php?query=$1 [QSA,L]
</IfModule>
